        ): {{type_name}} {
            {%- for field in fields %}
            val {{field.name}}: {{field.field_type}} = {{field.native_to_kt}}
            {%- endfor %}

            return {{type_name}}({%- for field in fields %}{{field.name}}{% if !loop.last%}, {% endif %}{%- endfor %})
        }
